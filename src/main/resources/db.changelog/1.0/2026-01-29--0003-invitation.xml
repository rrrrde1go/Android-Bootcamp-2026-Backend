<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
       https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="2026-01-29--0003-invitation" author="ggaidaenko">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="invitation"/>
            </not>
        </preConditions>
        <createTable tableName="invitation">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="meeting_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="invitee_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="invited_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="responded_at" type="TIMESTAMP"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="invitation" baseColumnNames="meeting_id"
                referencedTableName="meeting" referencedColumnNames="id"
                constraintName="fk_meeting_invitation"/>

        <addForeignKeyConstraint
                baseTableName="invitation" baseColumnNames="invitee_id"
                referencedTableName="app_user" referencedColumnNames="id"
                constraintName="fk_user_invitation"/>
    </changeSet>

</databaseChangeLog>
